@model IEnumerable<Patient>

@{
    Layout = "_PatientLayout";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">Patients</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-border table-striped custom-table datatable mb-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>City</th>
                                    <th>Zip Code</th>
                                    <th>Email</th>
                                    <th>UserName</th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted">No patient records available</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img width="28" height="28" src="~/@item.Img" class="rounded-circle m-r-5" alt="">
                                                @(item.FirstName + @item.LastName)
                                            </td>
                                            <td>@item.Age()</td>
                                            <td>@item.Gender</td>
                                            <td>@item.City</td>
                                            <td>@item.ZipCode</td>
                                            <td>@item.Email</td>
                                            <td>@item.UserName</td>

                                            <td class="text-right">
                                                <div class="dropdown dropdown-action">
                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="fa fa-ellipsis-v"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                            <i class="fa fa-pencil m-r-5"></i> Edit
                                                        </a>
                                                        <a class="dropdown-item" data-toggle="modal" data-target="#delete_patient_@item.Id">
                                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Modal for Confirm Delete -->
                                        <div id="delete_patient_@item.Id" class="modal fade delete-modal" role="dialog">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-body text-center">
                                                        <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                                                        <h3>Are you sure you want to delete this Patient?</h3>
                                                        <div class="m-t-20">
                                                            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                                                            <form asp-action="ConfirmDelete" method="post" style="display:inline;">
                                                                <input type="hidden" name="id" value="@item.Id" />
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="sidebar-overlay" data-reff=""></div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
